#include <GL/glut.h>
#include "common.h"

Menu::Menu(){
	std::cout << "created a menu\n";
	list_len = 0;
	list = new std::string[0];
	x_full = 100;
	y_full = 100;
	width_full = 100;
	height_full = 100;
	is_shown = false;
}

void Menu::reshape( ){
	x 			= (2*(float)x_full/WINDOW_WIDTH) - 1;
	y 			= (2*(float)y_full/WINDOW_HEIGHT) - 1;
	width 		= (2*(float)width_full/WINDOW_WIDTH);
	height 		= (2*(float)height_full/WINDOW_HEIGHT);
}

void Menu::render(){
	glColor3f( 1,1,1 );
	glBegin( GL_QUADS );
		glVertex3f( x, y, 0 );
		glVertex3f( x + width, y, 0 );
		glVertex3f( x + width, y + height, 0 );
		glVertex3f( x, y + height, 0 );
	glEnd();
}

void Menu::set_pos( int _x, int _y ){
	x_full = _x;
	y_full = _y;

	reshape();
}

void Menu::show(){
	is_shown = true;
}
